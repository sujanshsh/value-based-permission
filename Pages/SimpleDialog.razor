<MudDialog>
    <DialogContent>
        @DialogContent
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@CancelText</MudButton>
        <MudButton Color="Color.Primary" OnClick="OnOk">@OkText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string DialogContent {get; set;} = "";
    [Parameter] public string CancelText {get; set;} = "";
    [Parameter] public string OkText {get; set;} = "";
    void OnOk() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}